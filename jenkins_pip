currentBuild.displayName = "simplejob-#"+currentBuild.number
pipeline{
    agent any

    environment{
        PATH ="/opt/maven/bin:$PATH"
    }
    stages{
        stage("git check"){
            steps{
                git credentialsId: 'git_id', url: 'https://github.com/sasigowda/hello-world'
            }           
        }
        stage("maven build"){
            steps{
                sh "mvn clean package"
            }
        }
        stage("deploy to dev"){
            steps{
                 sshagent(['tomcat_deploy']) {
                sh """
                    scp -o StrictHostKeyChecking=no webapp/target/webapp.war ec2-user@172.31.38.119:/opt/tomcat/webapps/
                    ssh ec2-user@172.31.38.119 /opt/tomcat/bin/startup.sh
                    ssh ec2-user@172.31.38.119 /opt/tomcat/bin/shutdown.sh

                """
                }
            }
        }
        stage("sharing artifactory to docker server"){
            steps{
                sshPublisher(publishers: [sshPublisherDesc(configName: 'docker', transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '/root/home/ansible/docker', remoteDirectorySDF: false, removePrefix: 'target', sourceFiles: 'target/*.war')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])

            }
        }    
           
    }
}
